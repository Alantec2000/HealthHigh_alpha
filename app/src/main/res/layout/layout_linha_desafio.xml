<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    style="@style/linha_desafio"
    android:padding="5dp">

    <ImageView
        android:id="@+id/img_icone_desafio"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:padding="5dp"
        android:src="@drawable/corrida"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txt_titulo_desafio"
        style="@style/oneLineTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_icone_desafio"
        android:layout_marginStart="8dp"
        android:text="Título do desafio"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dd/mm/yy"
        style="@style/lista_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_margin="8dp"
        android:id="@+id/txt_data_criacao_desafio"/>

    <TextView
        android:id="@+id/txt_status_visualizacao_desafio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/vs_novo"
        app:layout_constraintEnd_toStartOf="@id/txt_data_criacao_desafio"
        app:layout_constraintStart_toEndOf="@id/txt_titulo_desafio"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_status_publicacao_desafio"
        android:text="@string/status_publicacao"
        app:layout_constraintTop_toBottomOf="@id/txt_titulo_desafio"
        app:layout_constraintStart_toEndOf="@id/img_icone_desafio"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição do desafio"
        android:id="@+id/txt_descricao_desafio"
        style="@style/oneLineText"
        app:layout_constraintTop_toBottomOf="@+id/txt_status_publicacao_desafio"
        app:layout_constraintStart_toEndOf="@id/img_icone_desafio"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

</android.support.constraint.ConstraintLayout>